doctype html
html
	head
		title Hapi-Blogger
		link(rel="stylesheet", href="../public/css/bootstrap.min.css")
		link(rel="stylesheet", href="../public/css/style.css")
		script(src="../public/lib/bootstrap.min.js")
		script(src="../public/lib/jquery-2.1.3.min.jss")

	body
		.container
			.row
				.navbar
					ul.nav.nav-pills.coyote
						li.active(role='presentation')
							a(href='/') Home
						li.active(role='presentation')
							a(href='/profile') Profile
						li.active.pull-right(role='presentation')
							a(href='/logout') Logout
		
			.row
				.col-sm-3.col-md-2
					.navbar
						h4 Blogposts
						ul
						if posts
							each post in posts
								li
									if (view === 'edit')
										a(href='/edit/#{post._id}?method=GET') #{post.title} 
										a(href='/#{post._id}?method=DELETE') &times;
									else
										a(href='/#{post._id}?method=GET') #{post.title}
						else
							li Error loading posts


				.col-sm-9.col-md-10
					block content

	footer
		.container
			p.text-muted Created by:
				a.text-muted(href='http://codependentfc.github.io/') Codependent